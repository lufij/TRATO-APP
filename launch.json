{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üöÄ Launch Chrome - Desarrollo",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}",
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile",
      "sourceMaps": true,
      "trace": "verbose",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ],
  "preLaunchTask": "üöÄ Desarrollo - Iniciar y abrir navegador"
    },
    {
      "name": "üåê Attach to Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "trace": "verbose"
    },
    {
      "name": "üêõ Debug Current TypeScript File",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "preLaunchTask": "${workspaceFolder}/node_modules/.bin/tsc",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "üîß Debug Supabase Functions (Local)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/supabase/functions/server/index.tsx",
      "env": {
        // For local debugging, set these in a local-only `.env.local` or your environment.
        // Example: SUPABASE_URL=https://<your_project>.supabase.co
        "SUPABASE_URL": "",
        "SUPABASE_ANON_KEY": "",
        "NODE_ENV": "development"
      },
      "runtimeArgs": ["--loader", "tsx"],
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ]
    }
  ],
  "compounds": [
    {
      "name": "üöÄ Debug Full Stack",
      "configurations": [
        "üöÄ Launch Chrome - Desarrollo",
        "üîß Debug Supabase Functions (Local)"
      ],
      "stopAll": true
    }
  ]
}