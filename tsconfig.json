{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
  "jsx": "react-jsx",
  "allowImportingTsExtensions": true,
    "strict": true,
    "baseUrl": "."
  },
  "include": [
    "vite.config.ts",
  "env.d.ts",
  "shims.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "App.tsx",
    "contexts/**/*.ts",
    "contexts/**/*.tsx",
    "utils/**/*.ts",
    "utils/**/*.tsx",
    "hooks/useServiceWorker.ts",
    "components/DiagnosticPage.tsx",
    "components/CredentialChecker.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "database/**",
  "supabase/functions/**",
    "**/*.sql",
    "**/*.sql.tsx"
  ]
}
